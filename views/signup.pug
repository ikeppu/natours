extends base
block content 
  main.main
    .login-form
      h2.heading-secondary.ma-bt-lg Register a new account
      form.form.form--register
        .form__group
          label.form__label(for='email') Email address
          input#email-reg.form__input(type='email', placeholder='you@example.com', required)
        .form__group
          label.form__label(for='text') Username
          input#username-reg.form__input(type='text', placeholder='Username', required)
        .form__group.ma-bt-md
          label.form__label(for='password') Password
          input#password-reg.form__input(type='password', placeholder='••••••••', required, minlength='8')
        .form__group.ma-bt-md
          label.form__label(for='password') Password Confirm
          input#passwordConfirm-reg.form__input(type='password', placeholder='••••••••', required, minlength='8')
        .form__group
          button.btn.btn--green Register